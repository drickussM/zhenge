<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kedaexpress.com.kedaexpressapp.MainMenu">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/pickup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ee"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pickuppackage"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/pickup"/>

    <ImageView
        android:id="@+id/myhistory"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/qq"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myhistory"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="42dp"
        android:layout_below="@+id/myhistory"/>
</RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">

        <ImageView
            android:id="@+id/aboutus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ww"
            android:layout_marginTop="80dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutus"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="72dp"
            android:textStyle="bold"
            android:layout_below="@+id/aboutus"/>

        <ImageView
            android:id="@+id/mysettings"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:src="@drawable/aa"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mysettings"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginRight="42dp"
            android:layout_below="@+id/mysettings"/>

    </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="520dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/mainMenuColor"
            android:textStyle="bold"
            android:text="@string/LOGOUT"
            android:id="@+id/logoutLink" />

</RelativeLayout>