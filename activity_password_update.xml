<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:layout_marginTop="30dp"
    tools:context="com.kedaexpress.com.kedaexpressapp.PasswordUpdate">

    <TextView
        android:id="@+id/oldPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/OldPassword"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/oldPassword"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:layout_marginTop="-10dp"
        android:layout_toRightOf="@+id/oldPasswordText"/>

    <TextView
        android:layout_below="@+id/oldPasswordText"
        android:id="@+id/updnewPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/NewPassword"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/updnewPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/oldPassword"
        android:layout_width="match_parent"
        android:maxLength="15"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/updnewPasswordText"/>

    <TextView
        android:layout_marginTop="35dp"
        android:layout_below="@+id/updnewPasswordText"
        android:id="@+id/confnewPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RepeatPassword"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/updconfnewPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/updnewPassword"
        android:layout_width="match_parent"
        android:maxLength="15"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/confnewPasswordText"/>

    <Button
        android:id="@+id/updPassBn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dft_phoneNumber"
        android:layout_marginTop="200dp"
        android:text="@string/UpdatePassword"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
