<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.kedaexpress.com.kedaexpressapp.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/ogo"
        android:layout_gravity="center"/>

</RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="?android:textAppearanceSmall"
        android:text="@string/login_bn_sc"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/textColor"
        android:background="@drawable/button_selecter"
        android:onClick="loginSCB"/>

    <Button
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        style="?android:textAppearanceSmall"
        android:text="@string/Register_bn_sc"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="17dp"
        android:background="@color/mainpageColor"
        android:onClick="registerSCB"/>

</LinearLayout>
